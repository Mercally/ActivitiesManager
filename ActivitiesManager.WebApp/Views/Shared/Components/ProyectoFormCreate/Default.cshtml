@model Proyecto

@{
    Layout = null;
}

<div class="col-md-4">
    @using (Html.BeginForm("create", "proyectos", FormMethod.Post, htmlAttributes: new { @class = "form form-create form-validate", @id = "proyecto-form-create" }))
